{% extends 'base.html.twig' %}

{% block title %}Vehicle index{% endblock %}

{% block body %}
    <h1>Vehicle List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th> Immatriculation </th>
                <th>Brand | Model</th>
            </tr>
        </thead>
        <tbody>
        {% for vehicle in vehicles %}
            <tr>
                <td>{{ vehicle.id }}</td>
                <td><a href="{{ path('vehicle_show', {id: vehicle.id}) }}">{{ vehicle.immatriculation }}</a></td>
                <td>{{ vehicle.brand }} | {{ vehicle.model }}</td>
{#                <td>#}
{#                    <a href="{{ path('vehicle_show', {'id': vehicle.id}) }}">show</a>#}
{#                    <a href="{{ path('vehicle_edit', {'id': vehicle.id}) }}">edit</a>#}
{#                </td>#}
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('vehicle_new') }}">New vehicle</a>
{% endblock %}
