{% extends 'base.html.twig' %}

{% block title %}Home page{% endblock %}

{% block body %}
    <div class="container-fluid my2">
        <div class="row">
            <div class="col-6">
                <form method="post" action="{{ path('driver_index') }}">
                    <div class="form-group">
                        <input class="form-control mb-2 mr-sm-2" name="driver_search" placeholder="Lookig for a driver"
                               type="text">
                        <button class="btn btn-dark form-control my-sm-0"> Search </button>
                    </div>
                </form>
            </div>
            <div class="col-6">
                <form method="post" action="{{ path('vehicle_index') }}">
                    <div class="form-group">
                        <input class="form-control mb-2 mr-sm-2" name="vehicle_search" placeholder="Looking for a vehicle"
                               type="text">
                        <button class="btn btn-dark form-control my-sm-0"> Search </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
